{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noImplicitOverride": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "noEmitOnError": true
  },
  "include": ["src/*", "build.config.ts", "scripts/*", "src/types/electron-env.d.ts"]
}
